{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ShopApp",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "install"],
      "problemMatcher": ["$mvn"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run ShopApp",
      "type": "shell",
      "command": "mvn",
      "args": ["spring-boot:run"],
      "isBackground": true,
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Maven Clean",
      "type": "shell",
      "command": "mvn",
      "args": ["clean"]
    }
  ]
}
